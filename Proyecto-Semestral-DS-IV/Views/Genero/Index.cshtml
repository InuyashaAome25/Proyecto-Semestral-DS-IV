@model IEnumerable<Proyecto_Semestral_DS_IV.Models.Modelos.Genero>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Lista de Generos</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<div class="col-md-12 col-sm-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Géneros <small>Listado</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Settings 1</a>
                        <a class="dropdown-item" href="#">Settings 2</a>
                    </div>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <p class="text-muted font-13 m-b-30">
                            La extensión Buttons para DataTables proporciona un conjunto común de opciones, métodos API y estilos para mostrar botones en una página que interactuarán con un DataTable. La biblioteca central proporciona el marco básico sobre el cual se pueden construir complementos.
                        </p>
                        <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre Género</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var genero in Model)
                                {
                                    <tr>
                                        <td>@genero.IDGenero</td>
                                        <td>@genero.NombreGenero</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts{
        <script src="~/Vendor/iCheck/icheck.min.js"></script>
        <script src="~/Vendor/fastclick/lib/fastclick.js"></script>
        <script src="~/Vendor/datatables.net/js/jquery.dataTables.min.js"></script>
        <script src="~/Vendor/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
        <script src="~/Vendor/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
        <script src="~/Vendor/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    }
</div>
    